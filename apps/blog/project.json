{
  "name": "blog",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "angular-blog",
  "sourceRoot": "apps/blog/src",
  "tags": [],
  "i18n": {
    "sourceLocale": "en-US",
    "locales": {
      "ru": {
        "translation": "apps/blog/src/i18n/messages.xlf",
        "baseHref": ""
      }
    }
  },
  "targets": {
    "build": {
      "executor": "@nx/angular:webpack-browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "customWebpackConfig": {
          "path": "apps/blog/webpack.config.ts"
        },
        "outputPath": "dist/apps/blog/browser",
        "index": "apps/blog/src/index.html",
        "main": "apps/blog/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/blog/tsconfig.app.json",
        "assets": ["apps/blog/src/favicon.ico", "apps/blog/src/assets"],
        "styles": ["apps/blog/src/styles.scss"],
        "allowedCommonJsDependencies": ["hammerjs"],
        "scripts": [],
        "localize": ["ru"]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@nx/angular:webpack-dev-server",
      "configurations": {
        "production": {
          "browserTarget": "blog:build:production"
        },
        "development": {
          "browserTarget": "blog:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "blog:build"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/blog/**/*.ts", "apps/blog/**/*.html"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/blog/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "server": {
      "executor": "@nx/angular:webpack-server",
      "options": {
        "outputPath": "dist/apps/blog/server",
        "main": "apps/blog/server.ts",
        "tsConfig": "apps/blog/tsconfig.server.json",
        "localize": ["ru"]
      },
      "configurations": {
        "production": {
          "outputHashing": "media"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "sourceMap": true,
          "extractLicenses": false,
          "vendorChunk": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve-ssr": {
      "executor": "@nguniversal/builders:ssr-dev-server",
      "configurations": {
        "development": {
          "browserTarget": "blog:build:development",
          "serverTarget": "blog:server:development"
        },
        "production": {
          "browserTarget": "blog:build:production",
          "serverTarget": "blog:server:production"
        }
      },
      "defaultConfiguration": "development"
    },
    "prerender": {
      "executor": "@nguniversal/builders:prerender",
      "options": {
        "routes": ["/"],
        "guessRoutes": false
      },
      "configurations": {
        "production": {
          "browserTarget": "blog:build:production",
          "serverTarget": "blog:server:production"
        },
        "development": {
          "browserTarget": "blog:build:development",
          "serverTarget": "blog:server:development"
        }
      },
      "defaultConfiguration": "production"
    }
  }
}
